<body>
  <div class="wrap">
    <header>
      <div>
        <h1>Soccer Match Predictor</h1>
        <div class="sub">Mock predictions for the upcoming 7 days — static HTML demo</div>
      </div>
      <div class="sub" id="generatedAt"></div>
    </header>

    <main>
      <div class="grid" id="matchesGrid" aria-live="polite"></div>
    </main>

    <footer>Starter static page. Replace mock data with your API and deploy to GitHub Pages.</footer>
  </div>

  <script>
    // Mock templates used to create a 7-day set
    const templates = [
      {homeName: 'Home FC 1', awayName: 'Away FC 1', homeLogo: 'https://via.placeholder.com/64?text=H1', awayLogo: 'https://via.placeholder.com/64?text=A1', prediction: 'Home Win', confidence: 72},
      {homeName: 'Home FC 2', awayName: 'Away FC 2', homeLogo: 'https://via.placeholder.com/64?text=H2', awayLogo: 'https://via.placeholder.com/64?text=A2', prediction: 'Draw', confidence: 54},
      {homeName: 'Home FC 3', awayName: 'Away FC 3', homeLogo: 'https://via.placeholder.com/64?text=H3', awayLogo: 'https://via.placeholder.com/64?text=A3', prediction: 'Away Win', confidence: 61}
    ];

    function formatDate(d){
      return d.toISOString().split('T')[0];
    }

    function buildMatches(){
      const grid = document.getElementById('matchesGrid');
      grid.innerHTML = '';
      const today = new Date();
      for(let i=0;i<7;i++){
        const t = templates[i % templates.length];
        const d = new Date(today);
        d.setDate(today.getDate() + i);
        const card = document.createElement('article');
        card.className = 'card';
        card.innerHTML = `
          <div class="date">${formatDate(d)}</div>
          <div class="teams">
            <div class="team">
              <img class="logo" src="${t.homeLogo}" alt="${t.homeName} logo">
              <div class="name">${t.homeName}</div>
            </div>
            <div class="vs">
              <div class="prediction">${t.prediction}</div>
              <div class="confidence">${t.confidence}%</div>
            </div>
            <div class="team">
              <img class="logo" src="${t.awayLogo}" alt="${t.awayName} logo">
              <div class="name">${t.awayName}</div>
            </div>
          </div>
        `;
        grid.appendChild(card);
      }
      document.getElementById('generatedAt').textContent = 'Updated: ' + new Date().toLocaleString();
    }

    // Render on load
    buildMatches();

    // Simple refresh button via keyboard R to regenerate (useful while editing)
    window.addEventListener('keydown', (e)=>{ if(e.key.toLowerCase()==='r'){ buildMatches(); } });
  </script>
</body>
</html>
